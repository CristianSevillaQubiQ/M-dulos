<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- library.book form view -->
    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">library.book.view.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="">                <!--form, es para la entrada de datos de un libro-->
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="price"/>
                            <field name="edition"/>
                            <field name="book_type"/>
                        </group>
                        <group>
                            <field name="buy_link"/>
                            <field name="sold"/>
                            <field name="date"/>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- library.book tree view -->
    <record id="library_book_view_tree" model="ir.ui.view">
        <field name="name">library.book.view.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree>                <!-- tree es para la vista de los libros registrados -->
                <field name="name"/>
                <field name="price"/>
                <field name="buy_link"/>
            </tree>
        </field>
    </record>


    <record id="record_name" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            Start adding some books
            </p>
            <p>
            </p>
        </field>

    </record>




    <!-- Adding filters based on the new parameters -->
    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">res.partner.select</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="before">
                <filter name="book_author_filter" string="Book author" domain="[('book_author', '=', True)]"/>
                <filter name="library_member_filter" string="Library member" domain="[('library_member', '=', True)]"/>
            </xpath>
        </field>
    </record>



    <!-- default filters in contacts views -->
    <record id="base_view_res_partner_author_filter" model="ir.actions.act_window">
        <field name="name">Authors</field>

        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_book_author_filter':1,
                               'default_book_author':True}</field>
    </record>


    <record id="base_view_res_partner_member_filter" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_library_member_filter':1,
                               'default_library_member':True}</field>
    </record>


    <!-- This Menu Item must have a parent and an action web_icon="DOQ_2,static/menu_icon.png"-->
    <menuitem id="library_book_main_menu" name="Library" action="record_name" sequence="10"/>
    <!-- Submenu -->
    <menuitem id="library_data_menu" parent="library_book_main_menu" name="Data" sequence="1"/>
    <menuitem id="library_books_data_menu" parent="library_data_menu" name="Books" action="record_name" sequence="1"/>
    <menuitem id="library_authors_data_menu" parent="doq_2.library_data_menu" name="Authors" action="base_view_res_partner_author_filter" sequence="3"/>
    <menuitem id="library_members_data_menu" parent="doq_2.library_data_menu" name="Members" action="base_view_res_partner_member_filter" sequence="4"/>


</odoo>