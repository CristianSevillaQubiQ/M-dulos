<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- library.book form view -->
    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">library.book.view.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string=""> <!--form, es para la entrada de datos de un libro-->
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="price"/>
                            <field name="edition"/>
                            <field name="book_type"/>
                        </group>
                        <group>
                            <field name="buy_link"/>
                            <field name="sold"/>
                            <field name="date"/>
                            
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- library.book tree view -->
    <record id="library_book_view_tree" model="ir.ui.view">
        <field name="name">library.book.view.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree> <!-- tree es para la vista de los libros registrados -->
                <field name="name"/>
                <field name="price"/>
                <field name="buy_link"/>
            </tree>
        </field>
    </record>


    <record id="record_name" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
            Start adding some books
            </p>
            <p>
            </p>
        </field>

    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="libray_book_menu_act" web_icon="DOQ_2,static/menu_icon.png" name="Library" action="record_name" sequence="10"/>
</odoo>