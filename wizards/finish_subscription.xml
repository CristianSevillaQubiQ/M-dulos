<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_members_view_form" model="ir.ui.view">
        <field name="name">wizard_members_view_form</field>
        <field name="model">finish.subscription</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="reason" />
                    </group>
                    
                    
                    <footer>
                        <button name="unsubscribe" string="Dar de baja" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                    
                </sheet>
            </form>
        </field>
    </record>

